---
import AppHead from '../components/app/Head.astro';
import AppHeader from '../components/app/Header.astro';
import AppFooter from '../components/app/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<AppHead title={title} />

	<body>
		<div class="page">
			<AppHeader />

			<main class="main">
				<slot />
			</main>

			<AppFooter />
		</div>
	</body>
</html>
