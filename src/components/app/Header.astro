---
import logoImg from '../../assets/logo.svg';
import { Image } from 'astro:assets';
import { socialsWithIcons } from '../../utils/socials';
---

<header class="header">
	<div class="header__container">
		<div class="header__logo logo">
			<Image src={logoImg} alt="Logo" />
			<div class="header__menu menu">
				<div class="menu__burger burger-menu"><span></span></div>
				<div class="menu__body">
					<ul class="menu__list">
						<li class="menu__item"><a href="" class="menu__link">Wave NFTs</a></li>
						<li class="menu__item"><a href="" class="menu__link">Stories</a></li>
						<li class="menu__item"><a href="" class="menu__link">Contact</a></li>
					</ul>
				</div>
			</div>
			<div class="header__socials socials" data-da=".menu__body,480,last">
				{
					socialsWithIcons.map(social => (
						<a href="" class:list={['socials-button', social.name]}>
							<Image src={social.icon} alt={social.title} />
						</a>
					))
				}
			</div>
		</div>
	</div>

	<style lang="scss">
		.header {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			z-index: 50;
			&::before {
				content: '';
				@extend %abs100;
				background-color: $mainbgc;
				z-index: -1;
			}
			&__container {
				padding: 15px;
				min-height: 100px;
				display: flex;
				align-items: flex-end;
			}
			&__logo {
				margin-bottom: 5px;
			}
			&__menu {
				margin-left: 40px;
				padding-bottom: 15px;
			}
			&__socials {
			}
		}

		// Menu Burger
		@media (max-width: $bp760) {
			.header {
				&__menu {
					justify-content: center;
					margin: 0px 30px;
					padding-bottom: 7px;
				}
			}
			.menu {
				&__burger {
					cursor: pointer;
					display: block;
					position: relative;
					width: 2.5em;
					height: 2.2em;
					z-index: 10;
					&::before,
					&::after,
					span {
						position: absolute;
						left: 0;
						width: 100%;
						height: 4px;
						border-radius: 4px;
						background-color: $txtcolor;
						transition: all 0.2s ease-in-out 0s;
					}
					&::before,
					&::after {
						content: '';
					}
					&::before {
						top: 0;
					}
					&::after {
						bottom: 0;
					}
					span {
						top: 50%;
						transform: translate(0, -50%);
					}
					&._active {
						span {
							opacity: 0;
						}
						&:before,
						&:after {
							top: 50%;
						}
						&:before {
							transform: rotate(45deg);
						}
						&:after {
							transform: rotate(-45deg);
						}
					}
				}
				&__body {
					position: fixed;
					top: -100%;
					left: 0;
					width: 100%;
					height: 100%;
					padding: 150px 30px 30px 30px;
					transition: top 0.3s ease 0s;
					z-index: -2;
					overflow: auto;
					background-color: rgba(3, 20, 3, 0.98);
					&._active {
						top: 0;
					}
				}
				&__list {
					flex-direction: column;
					align-items: center;
				}
				&__item {
					&:not(:last-child) {
						margin-right: 0;
						margin-bottom: 3em;
					}
				}
				&__link {
					text-align: center;
					font-size: 1.5em;
				}
			}
		}
		@media (max-width: $bp480) {
			.header {
				&__menu {
					margin-right: 20px;
					justify-content: flex-end;
				}
				&__socials {
					margin-top: 40px;
					justify-content: center;
				}
			}
		}
	</style>
</header>
