---
interface Props {
	title?: string;
}

const { title = 'Meta' } = Astro.props;

const resolveURL = (path: string) =>
	`${import.meta.env.BASE_URL.replace(/\/$/g, '')}/${path.replace(/^\//g, '')}`;
---

<head>
	<meta charset="UTF-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="shortcut icon" href={resolveURL('/favicon.svg')} type="image/svg" />
	<title>{title}</title>
</head>
